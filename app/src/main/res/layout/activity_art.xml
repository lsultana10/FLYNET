<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    tools:context=".ArtActivity"
    android:background="@color/colorBackground"

    android:focusable="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:paddingTop="60dp"
                android:text= "Art Interests"
                android:textColor="@color/colorWhite"
                android:textSize="35dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical">
                    <ImageView
                        android:src="@drawable/watercolor"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        />

                    <CheckBox
                        android:id="@+id/painting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onCheckboxClicked"
                        android:text="Painting"
                        android:textColor="@color/colorWhite"
                        android:theme="@style/coloured_Checkbox"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/sculpture" />

                    <CheckBox
                        android:id="@+id/sculpture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onCheckboxClicked"
                        android:text="Sculpture"
                        android:textColor="@color/colorWhite"
                        android:theme="@style/coloured_Checkbox" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:id="@+id/writing">
                    <ImageView
                        android:src="@drawable/poem"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        />

                    <CheckBox
                        android:id="@+id/poetry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onCheckboxClicked"
                        android:text="Poetry and Writing"
                        android:textColor="@color/colorWhite"
                        android:theme="@style/coloured_Checkbox" />
                </LinearLayout>
            </LinearLayout>
            <!--Second Row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:id="@+id/graphic"
                    >
                    <ImageView
                        android:src="@drawable/computer"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        />

                    <CheckBox
                        android:id="@+id/graphicdesign"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onCheckboxClicked"
                        android:text="Graphic Design"
                        android:textColor="@color/colorWhite"
                        android:theme="@style/coloured_Checkbox" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical">
                    <ImageView
                        android:src="@drawable/calligraphy"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        />

                    <CheckBox
                        android:id="@+id/calligraphy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onCheckboxClicked"
                        android:text="Calligraphy"
                        android:textColor="@color/colorWhite"
                        android:theme="@style/coloured_Checkbox" />
                </LinearLayout>

            </LinearLayout>
            <!--End of Second Row-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>